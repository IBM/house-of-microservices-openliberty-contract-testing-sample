{
  "consumer": {
    "name": "App"
  },
  "provider": {
    "name": "House"
  },
  "interactions": [
    {
      "description": "a request for the residents current state",
      "request": {
        "method": "GET",
        "path": "/resident/state",
        "headers": {
          "Accept": "application/json"
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "head": {
          },
          "hair": {
            "state": "frizzled"
          },
          "legs": {
          },
          "torso": {
            "state": "full"
          },
          "eyes": {
            "state": "awake"
          }
        },
        "matchingRules": {
          "$.body.hair.state": {
            "match": "regex",
            "regex": "^(frizzled|combed)$"
          },
          "$.body.torso.state": {
            "match": "regex",
            "regex": "^(full|hungry)$"
          },
          "$.body.eyes.state": {
            "match": "regex",
            "regex": "^(awake|asleep)$"
          }
        }
      }
    },
    {
      "description": "a request for the resident to wake up",
      "request": {
        "method": "PUT",
        "path": "/resident/wakeup"
      },
      "response": {
        "status": 204,
        "headers": {
        }
      }
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "2.0.0"
    }
  }
}